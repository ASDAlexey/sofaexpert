//- index.jade
extends ../layout-page.jade
block aside
    +aside('main')
block content
    // .pages-small-menu - ставиться только на страницах черного меню, cooperation - только на странице cooperation.html
    section.content-block.pages-small-menu.contacts
        article.content
            h1 Контакты
            .contacts-info
                ul.info
                    li 690065 Россия, г. Владивосток ул. Крыгина , дом 3, офис 206 (здание отель Гавань)
                    li
                        a(href="mailto:mail@sk-intercom.ru ") mail@sk-intercom.ru
                    li
                        a(href="skype:sk-intercom?callu ") sk-intercom
                ul.phones
                    li
                        p Единый телефон для всей России:
                        p.phone 8 (800) 234-77-88
                        p звонок для всех регионов бесплатный
                    li
                        p.phone 8 (423) 201-45-65
                    li
                        p.phone 8 (924) 233-98-97
                    li
                        p.phone 8 (423) 230-29-59
            .tabs-block(ng-controller="TabCtrl as tab")
                ul.list-switcher
                    li
                        a(href="" ng-class="{'active':tab.currentTab==0}" ng-click="tab.switchTab(0)")
                            span  <span>Заказать</span>мебельный тур в Китай
                    li
                        a(href="" ng-class="{'active':tab.currentTab==1}" ng-click="tab.switchTab(1)")
                            span <span>Оформить заявку</span> на доставку
                    li
                        a(href="" ng-class="{'active':tab.currentTab==2}" ng-click="tab.switchTab(2)")
                            span <span>Заказать</span>мебель на Taobao Alibaba TMall
                div.tab-container(ng-if="tab.currentTab==0")
                    div.animated.lightSpeedIn
                        .contact-form(style="background-image:url('./images/contacts/1.jpg')")
                            form.form-validate(name="formValidate" is-valide-border="{{formValidate.$invalid}}" novalidate ng-controller="ContactsCtrl" ng-init="setCountSelects(2)")
                                div
                                    input(type="text" name="fio" placeholder="ФИО" ng-model='dataForm.fio' autocomplete="off" required)
                                div
                                    input(type="email" name="email" placeholder="E-mail" ng-model='dataForm.email' autocomplete="off" required)
                                div
                                    input(type="text" name="phone" ui-mask="+7(999)-999-99-99" ng-model='dataForm.phone' autocomplete="off" required)
                                div.select-block(ng-class="{'open':zIndex[0]==true}")
                                    // setSelect({name:"name_select"","placeholder":{"value":"", "text":"Город"}})
                                    // name_select -любое имя cелекта латиницей
                                    // "placeholder" - информация в выбранныя в селекте при загрузке, если value ="", то выводиться текст, иначе нужно в placehoder
                                    //  вставить объект который будет выбран при загрузке страницы, например "placeholder":{"value":"1", "text":"Москва"}
                                    // "options" - перечисляем коллекция всех options ceлекта
                                    // name в setSelect должен совпадать с input-model="selects['select0']"
                                    div(multi-select ng-init='setSelect({"name":"select0","placeholder":{"value":"", "text":"Город"},"options":[{"value":"1","text":"Москва","src":""},{"value":"2","text":"Санкт-Петербург","src":""}]})' on-open="fOpen(0)" on-close="fClose(0)" input-model="selects['select0']" button-label="name" item-label="name maker" tick-property="ticked" selection-mode="single" helper-elements="")
                                div
                                    input(type="text" name="arrival_date" placeholder="Дата прибывания" ng-model='dataForm.arrival_date' autocomplete="off" required)
                                div
                                    input(type="text" name="remark" placeholder="Примечание" ng-model='dataForm.remark' autocomplete="off" required)
                                div.select-block(ng-class="{'open':zIndex[1]==true}")
                                    div(multi-select ng-init='setSelect({"name":"select1","placeholder":{"value":"", "text":"Мебель"},"options":[{"value":"1","text":"Диван","src":""},{"value":"2","text":"Диван 2","src":""}]})' on-open="fOpen(1)" on-close="fClose(1)" input-model="selects['select1']" button-label="name" item-label="name maker" tick-property="ticked" selection-mode="single" helper-elements="")
                                input(type="hidden" ng-init="dataFormHidden.task = 'contacts'")
                                .wrapper-send
                                    button.send(ng-click="send(dataForm,formValidate)") Отправить
