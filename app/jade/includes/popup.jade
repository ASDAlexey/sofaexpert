section.popup-content-wrap.search
    popup
    .inner#inner(ng-controller="formValidationCtrl")
        .block-filters(ng-show="popup=='main'")
            h1.title Быстрый поиск авто
            h2 Параметры
            form.form-validate(name="formValidate" is-valide-border="{{formValidate.$invalid}}" novalidate)
                div(multi-select input-model="select[0]" button-label="name" item-label="name maker" tick-property="ticked" selection-mode="single" helper-elements="" on-item-click="removePlaceholder(data)" ng-init="setSelect(['BMW','OPEL'],0,'Марка')")
                div(multi-select input-model="select[1]" button-label="name" item-label="name maker" tick-property="ticked" selection-mode="single" helper-elements="" on-item-click="removePlaceholder(data)" ng-init="setSelect(['model1','model2'],1,'Модель')")
                div(multi-select input-model="select[2]" button-label="name" item-label="name maker" tick-property="ticked" selection-mode="single" helper-elements="" on-item-click="removePlaceholder(data)" ng-init="setSelect(['price from 1','price from 2'],2,'Цена')")
                div(multi-select input-model="select[4]" button-label="name" item-label="name maker" tick-property="ticked" selection-mode="single" helper-elements="" on-item-click="removePlaceholder(data)" ng-init="setSelect(['year 1','year 2'],4,'Год выпуска')")
                div(multi-select input-model="select[5]" button-label="name" item-label="name maker" tick-property="ticked" selection-mode="single" helper-elements="" on-item-click="removePlaceholder(data)" ng-init="setSelect(['100-2999','3000-50000'],5,'Пробег, мили')")
                .wrapper-send
                    a(href="./catalog.html") Перейти в каталог
                    button.send(ng-click="send('',formValidate)")
                        span Подобрать
        div.block-result(ng-show="popup=='main'")
            h3.title-popular(ng-if="!isSearchStart") Популярные товары
            ul.list-popular(ng-if="!isSearchStart")
                li
                    a(ng-href="./news.html")
                        figure
                            span
                            div
                                img(ng-src="./images/result-search/1.jpg")
                            div
                                h3 BMW X5 (2011)
                                time.time 22.02.2014
                                figcaption.caption Описание популярного автомобиля
                                div.price
                                    span
                                        span {{9000 | splitSpace}}
                                        | $
                li
                    a(ng-href="./news.html")
