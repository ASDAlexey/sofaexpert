.contacts
  h1
    position:relative;
    z-index:0
    jl(30px)
    margin:0 23px
    color:#000;
    border-bottom:1px solid #cab558
    margin-bottom:28px
  .contacts-info
    margin:0 23px 23px
    after()
    .info
      background:none
      float:left
      width:315px
      > li
        padding-left:0
        margin-left:33px
        position:relative
        z-index:0
        margin-bottom:18px
        &:last-child
          margin-bottom:0
        &:after
          content:''
          position:absolute
          z-index:1
          left:-25px
          top:-2px
          sprite($location)
        > a
          margin-left:12px
          dibt()
          osb(14px)
          color:#cab558
        &:first-child
          osl(16px)
          margin-bottom:20px
          color:#000
        &:nth-child(2)
          &:after
            sprite($mail)
        &:nth-child(3)
          &:after
            sprite($skype)
    .phones
      background:none
      float:right
      width:275px
      margin-right:10px
      > li
        padding-left:0
        margin-top:0
        &:after
          display:none !important
        &:first-child
          position:relative
          z-index:0
          margin-bottom:7px
          &:after
            content:''
            position:absolute
            z-index:1
            left:-31px
            top:-2px
            sprite($phones)
          p:last-child
            margin-top:7px
        p
          color:#000
          osl(14px)
          &.phone
            osr(24px)
            margin-top:5px
.contact-form
  padding-bottom:100px
  after()
  min-height 264px
  background-position:right top
  background-repeat:no-repeat
  .form-validate
    float:left
    width:352px
    > div
      margin-top:17px
      &.wrapper-send
        position:absolute
        z-index:1
        top:186px;
        right:58px
        .send
          sprite($buttton_send)
          color:#fff
          text-transform:uppercase
          text-align:center
          jdb(20px)
          padding-top:4px
      &:first-child
        margin-top:0
      input
        padding-left:23px
        width:100%
        display:block
        color:#000
        osr(14px,20px)
